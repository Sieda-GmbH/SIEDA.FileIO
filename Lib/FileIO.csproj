      <!-- the IMPORTANT ones -->
      <AssemblyName>SIEDA.FileIO</AssemblyName>
      <TargetFramework>netcoreapp3.1</TargetFramework>
      <TargetFrameworks>netstandard2.1;netcoreapp3.1;net462;net48</TargetFrameworks>

