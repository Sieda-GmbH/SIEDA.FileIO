   <PropertyGroup>
      <Title>SIEDA.FileIO</Title>
      <Authors>SIEDA Systemhaus für intelligente EDV-Anwendungen GmbH</Authors>
      <Description>A simple helper library, wrapping around Net's basic File-IO functionality</Description>
      <RepositoryUrl>https://github.com/Sieda-GmbH/SIEDA.FileIO</RepositoryUrl>
      <PackageLicenseFile>LICENSE</PackageLicenseFile>
      <PackageIcon>logo.png</PackageIcon>
      <RepositoryType>git</RepositoryType>
       <!-- display no weird dialogs to prevent command-line usage. License is still in effect of course! -->
      <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
   </PropertyGroup>
   <ItemGroup>
      <!-- include non-source code files for NuGet-Package -->
      <None Include="..\LICENSE" Pack="true" PackagePath=""/>
      <None Include="..\logo.png" Pack="true" PackagePath=""/>
   </ItemGroup>


